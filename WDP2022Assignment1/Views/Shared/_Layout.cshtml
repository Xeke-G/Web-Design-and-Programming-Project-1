<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WDP2022Assignment1.styles.css" asp-append-version="true" />
    
    <link rel="stylesheet" type="text/css" href="~/css/mystyle.css" />
    <link href="https://fonts.googleapis.com/css?family=Niconne" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Anton" rel="stylesheet" type="text/css">

    <link rel="stylesheet" href="https://pyscript.net/alpha/pyscript.css" />
    <script defer src="https://pyscript.net/alpha/pyscript.js"></script>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow" id="Nav">
            <div class="container-fluid">
                <a class="navbar-brand text-light fs-6" asp-area="" asp-controller="Home" asp-action="Index">AI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light fs-6" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fs-6" asp-area="" asp-controller="Home" asp-action="Jobs">Jobs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fs-6" asp-area="" asp-controller="Home" asp-action="Companies">Companies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fs-6" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div >
        <main role="main" class="body">
            @RenderBody()
        </main>
    </div>

    <footer class="container-fluid footer fs-6" id="footer">
            <div>
                <div class="row text-decoration-none">
                    <div align="left" class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12">
                        <ul>
                            <li><a class="text-light text-muted text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a class="text-light text-muted text-decoration-none" asp-area="" asp-controller="Home" asp-action="Companies">AI Companies</a></li>
                            
                        </ul>
                    </div>
                    <div align="left" class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12">
                        <ul>
                            <li><a class="text-light text-muted text-decoration-none" asp-area="" asp-controller="Home" asp-action="Jobs">AI Jobs</a></li>
                            <li><a class="text-light text-muted text-decoration-none" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                        </ul>
                    </div>
                    <div align="left" class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12">
                        <ul>
                            <li><a class="text-light text-muted text-decoration-none" asp-area="" asp-controller="Home" asp-action="Contact">About Us</a></li>
                            <li><a class="text-light text-muted text-decoration-none" asp-area="" asp-controller="Home" asp-action="Contact">Copyright Info</a></li>
                            
                        </ul>
                    </div>
                    <div align="left" class="col-xl-3 col-lg-6 col-md-4 col-sm-6 col-12">
                        <div class="social-links">
                            <ul id="links">
                                <li><a class="text-light text-muted text-decoration-none">Follow Us</a></li>
                                <li>
                                <a href="https://www.shorturl.at/nqR29"><i class="fa fa-google"></i></a>
                                <a href="https://www.shorturl.at/wNUZ0"><i class="fa fa-youtube"></i></a>
                                <a href="https://www.shorturl.at/EL235"><i class="fa fa-twitter"></i></a>
                                <a href="https://www.shorturl.at/vJWY5"><i class="fa fa-facebook"></i></a>                                
                                <a href="https://www.shorturl.at/eAJU6"><i class="fa fa-linkedin"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/myjquery.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
